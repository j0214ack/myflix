- @categories.each do |category|
  %article.video_category
    %header
      %h3= link_to category.name, category
    .videos.row
      = render category.recent_videos
- if @videos_without_categories.any?
  %article.video_category
    %header
      %h3= link_to "Uncategorized"
    .videos.row
      = render @videos_without_categories
