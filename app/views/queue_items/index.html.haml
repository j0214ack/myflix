%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        = form_tag update_my_queue_path, method: :put do
          %table.table
            %thead
              %tr
                %th(width="10%") List Order
                %th(width="30%") Video Title
                %th(width="10%") Play
                %th(width="20%") Rating
                %th(width="15%") Genre
                %th(width="15%") Remove
            %tbody
              - @queue_items.each_with_index do |queue_item, index|
                %tr
                  %td= text_field_tag("queue_item[#{queue_item.id}][position]",
                                      index + 1, class: 'form-control')
                  %td= link_to queue_item.video.title, queue_item.video
                  %td= button_to 'Play', nil, class: 'btn btn-default'
                  %td= select_tag("queue_item[#{queue_item.id}][rating]",
                                  rating_chioces(queue_item.rating),
                                  class: 'form-control',
                                  include_blank: true)
                  %td= link_to queue_item.category.name, queue_item.category
                  %td
                    = link_to queue_item, method: :delete do
                      %i.glyphicon.glyphicon-remove
          = button_tag 'Update Instant Queue', class: 'btn btn-default'
